@{
    Layout = "~/Views/AmendApp/AmendAppTemplate.cshtml";
}
@section Headers
{
    <!-- flatpick plugin -->
    <link rel="stylesheet" href="../assets/flatpickr/flatpickr.min.css">
    <script src="../assets/flatpickr/flatpickr.js"></script>
    <script src="../assets/flatpickr/zh-tw.js"></script>
}

<!-- 填寫修改申請書-其他 -->
<div id="lcforOtherAppList" class="hnb__hide">
    <h1 class="py-2 fs-4 fw-bolder">填寫修改申請書</h1>
    <div class="mb-2 card">
        <div class="card-body bg-light">
            <form id="lcAppForm">
                <div class="container-fluid">
                    <div class="row align-items-center">
                        <div class="col-12 py-1 hnb__bankName text-center">
                            開發國內不可撤銷信用狀申請書
                        </div>
                        <div class="py-1 col-12 text-center">
                            114 年 5 月 10 日
                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-sm hnb__table hnb__bg--white">
                        <tbody>
                            <tr>
                                <td colspan="2">
                                    <p class="fw-bold">
                                        華南商業銀行 台北分行 台鋻
                                    </p>
                                    <ol class="mb-0 hnb__list--ol">
                                        <li>
                                            茲請 　貴行准照前訂委任開發國內信用狀契約之約定依下開條件開發信用狀。
                                        </li>
                                        <li>
                                            本信用狀規定如有未盡事宜適用國際商會所訂現行「信用狀統一慣例與實務」之規定。
                                        </li>
                                    </ol>
                                </td>
                            </tr>
                            <tr>
                                <th class="hnb__tbhd2" style="width: 300px">申請人：</th>
                                <td>
                                    <input type="text" class="form-control form-control-sm" id="appName">
                                </td>
                            </tr>
                            <tr>
                                <th class="hnb__tbhd2">申請人統一編號：</th>
                                <td>
                                    <input type="text" class="form-control form-control-sm" id="appNo">
                                </td>
                            </tr>
                            <tr>
                                <th class="hnb__tbhd2">金額：</th>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <span class="mx-1 text-nowrap">新台幣</span>
                                        <input type="text" class="form-control form-control-sm" id="payment">
                                        <span class="mx-1 text-nowrap">元整</span>
                                    </div>
                                </td>
                                <th class="hnb__tbhd2">
                                    有效期限至：
                                </th>
                                <td>
                                    <div class="input-group flex-nowrap">
                                        <input type="datetime-local" id="expDate" placeholder="請點選日期"
                                               class="form-control form-control-sm hnb__calendar" style="max-width: 180px" readonly>
                                        <label class="input-group-text py-1" for="expDate">
                                            <span class="mdi mdi-calendar-month"></span>
                                        </label>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th class="hnb__tbhd2">通知銀行：( 如有需要指定銀行時請填上 )</th>
                                <td>
                                    <select id="noticeBranch" class="form-select form-select-sm">
                                        <option value="0" selected="">= 請選擇 =</option>
                                        <option>125 彰化分行</option>
                                        <option>221 桃園分行</option>
                                        <option>023 南港分行</option>
                                        <option>001 台北分行</option>
                                    </select>
                                    <div class="my-1 hnb__text--red">
                                        ＊ 如為長春分行，受益人僅限台灣新力公司
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th class="hnb__tbhd2">受益人：</th>
                                <td>
                                    <div class="container-fluid">
                                        <div class="row align-items-center">
                                            <div class="col-1 my-1 text-nowrap">
                                                統一編號：
                                            </div>
                                            <div class="col-11 my-1">
                                                <input type="text" class="form-control form-control-sm" name="beneNo2">
                                            </div>
                                            <div class="col-1 my-1 text-nowrap">
                                                名稱：
                                            </div>
                                            <div class="col-11 my-1">
                                                <input type="text" class="form-control form-control-sm" name="beneName2">
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th class="hnb__tbhd2">受益人之負責人：</th>
                                <td>
                                    <input type="text" class="form-control form-control-sm" id="manager">
                                </td>
                            </tr>
                            <tr>
                                <th class="hnb__tbhd2">負責人職稱：</th>
                                <td>
                                    <input type="text" class="form-control form-control-sm" id="lcNo">
                                </td>
                            </tr>
                            <tr>
                                <th class="hnb__tbhd2">受益人地址：</th>
                                <td>
                                    <input type="text" class="form-control form-control-sm" id="address">
                                </td>
                            </tr>
                            <tr>
                                <th class="hnb__tbhd2">受益人電話：</th>
                                <td>
                                    <input type="text" class="form-control form-control-sm" id="phone">
                                </td>
                            </tr>
                            <tr>
                                <th class="hnb__tbhd2">受益人電子信箱：</th>
                                <td>
                                    <input type="text" class="form-control form-control-sm" id="email">
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2" class="fw-bold">
                                    本信用狀可由上開受益人在不超過上開金額範圍內依本狀規定條件簽發匯票承兌/付款，該匯票之條件：
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2" class="fw-bold">
                                    一、匯票之條件：
                                </td>
                            </tr>
                            <tr>
                                <th class="hnb__tbhd2">甲、付款人：</th>
                                <td>
                                    <div class="d-flex align-items-center">
                                        華南商業銀行 台北分行
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th class="hnb__tbhd2">乙、付款期限：</th>
                                <td>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="paymentDate" id="imd">
                                        <label class="form-check-label" for="imd">
                                            見票即付。
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="paymentDate" id="payDate">
                                        <label class="form-check-label" for="payDate">
                                            以「 定日付款 」方式填寫到期日，其到期日為：
                                        </label>
                                    </div>
                                    <div class="ms-4">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="paymentExpDate" id="paymentExpDate1">
                                            <label class="form-check-label" for="paymentExpDate1">
                                                匯票發票日
                                            </label>
                                        </div>
                                        <div class="form-check d-flex align-items-center">
                                            <input class="form-check-input" type="radio" name="paymentExpDate" id="paymentExpDate2">
                                            <label class="px-2 form-check-label d-flex align-items-center" for="paymentExpDate2">
                                                統一發票日
                                            </label>
                                        </div>
                                        <div class="form-check d-flex align-items-center">
                                            <input class="form-check-input" type="radio" name="paymentExpDate" id="paymentExpDate3">
                                            <label class="px-2 form-check-label d-flex align-items-center" for="paymentExpDate3">
                                                其他：
                                                <input type="text" class="mx-1 form-control form-control-sm" id="payDate"
                                                       style="width:200px">
                                            </label>
                                        </div>
                                        <div class="d-flex align-items-center">
                                            起算
                                            <input type="text" class="mx-1 form-control form-control-sm" id="payDate" style="width:30px">
                                            天內。
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th class="hnb__tbhd2">丙、金額：</th>
                                <td>
                                    須與相關發票上所列開金額一致。
                                </td>
                            </tr>
                            <tr>
                                <th class="hnb__tbhd2">丁、應檢附之單證：</th>
                                <td>
                                    <div class="container-fluid">
                                        <div class="row align-items-center">
                                            <div class="col-12 my-1">
                                                1. 匯票承兌/付款申請書乙份。
                                            </div>
                                            <div class="col-12 my-1">
                                                2.
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="invoiceOptions" id="invoice1"
                                                           value="option1">
                                                    <label class="form-check-label" for="invoice1">發票</label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="invoiceOptions" id="invoice2"
                                                           value="option2">
                                                    <label class="form-check-label" for="invoice2">統一發票</label>
                                                </div>
                                            </div>
                                            <div class="col-12 my-1">
                                                3. 其他 ( 請註明 )：
                                                <textarea class="form-control form-control-sm" id="exampleFormControlTextarea1"
                                                          rows="3"></textarea>
                                            </div>
                                            <div class="col-12 my-1">
                                                4. 上項單據應載明申請人向受益人購買下列產品：
                                                <textarea class="form-control form-control-sm" id="exampleFormControlTextarea1"
                                                          rows="3"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th class="hnb__tbhd2">特別指示：</th>
                                <td>
                                    <div class="container-fluid">
                                        <div class="row align-items-center">
                                            <div class="col-12 my-1">
                                                1. 匯票及匯票付款申請書使用受益人所訂格式，由受益人單獨簽章或使用數位憑證有效。
                                            </div>
                                            <div class="col-12 my-1">
                                                2. 貨物可以分批交貨。
                                            </div>
                                            <div class="col-12 my-1">
                                                3. 最後交貨日期：
                                                <div class="mx-2 input-group flex-nowrap d-inline-flex" style="max-width: 180px">
                                                    <input type="datetime-local" id="deliveryDate" placeholder="請點選日期"
                                                           class="form-control form-control-sm hnb__calendar" readonly>
                                                    <label class="input-group-text py-1" for="deliveryDate">
                                                        <span class="mdi mdi-calendar-month"></span>
                                                    </label>
                                                </div>
                                                ( 未填者自開狀日起三個月視為最後交貨日，惟不得超過信用狀有效日期 )。
                                            </div>
                                            <div class="col-12 my-1">
                                                4. 發票日期早於開狀日期可以接受。
                                            </div>
                                            <div class="col-12 my-1">
                                                5. 發票金額大於開狀金額或匯票金額可以接受。
                                            </div>
                                            <div class="col-12 my-1">
                                                6. 以受益人所屬分公司或分廠名義開立之發票押匯可以接受。
                                            </div>
                                            <div class="col-12 my-1">
                                                7. 本信狀適用 eUCP2.0 版。
                                            </div>
                                            <div class="col-12 my-1">
                                                8. 允許受益人以匯票、匯票付款申請書及發票電子檔方式押匯。
                                            </div>
                                            <div class="col-12 my-1">
                                                9. 押匯電子文件透過網址: HTTPS://ecrm.fpg.com.tw 提示。
                                            </div>
                                            <div class="col-12 my-1">
                                                10. 遠期信用狀利息：
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="checkbox" name="rateOptions" id="fee1"
                                                           value="option1">
                                                    <label class="form-check-label" for="fee1">買方負擔</label>
                                                </div>
                                            </div>
                                            <div class="col-12 my-1">
                                                11. 其他：
                                                <textarea class="form-control form-control-sm" name="otherNote" placeholder="~ 其他特別指示條款 ~"
                                                          rows="3"></textarea>
                                            </div>
                                            <div class="col-12 my-1">
                                                12.限定押匯日期：自
                                                <div class="mx-2 input-group flex-nowrap d-inline-flex" style="max-width: 180px">
                                                    <input type="datetime-local" id="lnd" placeholder="請點選日期"
                                                           class="form-control form-control-sm hnb__calendar" readonly>
                                                    <label class="input-group-text py-1" for="lnd">
                                                        <span class="mdi mdi-calendar-month"></span>
                                                    </label>
                                                </div>
                                                起始可押匯。( 未填寫者視為未限定押匯日期 )
                                            </div>
                                            <div class="col-12 my-1">
                                                13.發票起始開立日期：
                                                <div class="mx-2 input-group flex-nowrap d-inline-flex" style="max-width: 180px">
                                                    <input type="datetime-local" id="InvStartDate" placeholder="請點選日期"
                                                           class="form-control form-control-sm hnb__calendar" readonly>
                                                    <label class="input-group-text py-1" for="InvStartDate">
                                                        <span class="mdi mdi-calendar-month"></span>
                                                    </label>
                                                </div>
                                                。( 以統一發票日起算匯票到其日期者，請填寫此項，未填寫者視為未限制發票開立日期 )
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="d-flex align-items-center justify-content-center">
                    <button type="button" class="m-1 px-3 btn btn-sm hnb__btn--cancel text-nowrap" data-bs-toggle="modal"
                            data-bs-target="#promptModal">
                        取消
                    </button>
                    <button type="button" class="m-1 px-3 btn btn-sm hnb__btn--print text-nowrap" data-bs-toggle="modal"
                            data-bs-target="#reviewOtherLcAppModal">
                        預覽
                    </button>
                    <span class="mx-2">|</span>
                    <button type="reset" class="m-1 px-3 btn btn-sm hnb__btn--cancel text-nowrap">
                        重填
                    </button>
                    <button type="button" class="m-1 px-3 btn btn-sm hnb__btn--default text-nowrap" data-bs-toggle="modal"
                            data-bs-target="#confirmPromptModal">
                        確定
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
}